<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @killteam.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @killteam.description %>
</p>

<p>
  <strong>Requisition:</strong>
  <%= @killteam.requisition %>
</p>

<p>
  <strong>Assetcap:</strong>
  <%= @killteam.assetcap %>
</p>

<p>
  <strong>Base:</strong>
  <%= @killteam.base %>
</p>

<p>
  <strong>Faction Keyword:</strong>
  <%= @killteam.factionkeyword %>
</p>

<div class="grid">
  <% if @killteam.images.attached?%>
      <% (0...@killteam.images.count).each do |image| %>
        <div class="ktframe" style='width:300px; height: 300px'>
          <%= image_tag(@killteam.images[image], style:'width: 100%; height: auto')%>
        </div>
      <% end %>
  <% end %>
</div>

<div>
  <br>
  <%= link_to 'Edit', edit_killteam_path(@killteam) %> |
  <%= link_to 'Back', killteams_path %>
</div>
