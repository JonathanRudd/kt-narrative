<p id="notice"><%= notice %></p>

<h1>Warzones</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>


<div class="planet">
  <div class="wrap">
    <div class="background"></div>
    <div class="clouds"></div>
  </div>
  <div class="mask"></div>
  <div class="highlight highlight1">.  Echo City</div>
  <div class="highlight highlight2">.  REDACTED</div>
  <div class="highlight highlight3">.  Outpost Gamma</div>
</div>



  <tbody>
    <% @warzones.each do |warzone| %>
      <tr>
        <td><%= warzone.name %></td>
        <td><%= warzone.description %></td>
        <td><%= link_to 'Show', warzone %></td>
        <td><%= link_to 'Edit', edit_warzone_path(warzone) %></td>
        <td><%= link_to 'Destroy', warzone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Warzone', new_warzone_path %>
